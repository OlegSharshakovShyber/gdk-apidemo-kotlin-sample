<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This "trick" gives us a 1px border along the bottom of a row in the table
         by using a stroked rectangle that has its left, top, and right sides positioned
         just outside the bounds of the view. -->
    <item
        android:left="-1px"
        android:right="-1px"
        android:top="-1px"
        >
        <shape android:shape="rectangle">
            <stroke android:color="@color/muted_text" android:width="1px"/>
        </shape>
    </item>

</layer-list>
